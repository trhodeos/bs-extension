{
  "manifest_version": 2,

  "name": "BeardedSpice",
  "description": "Control web-based media apps with your media keys.",
  "version": "1.0",
  "browser_action": {
    "default_icon": "resources/beard.png",
    "default_popup": "index.html"
  },
  
  "commands": {
    "toggle": {
      "suggested_key": {
        "default": "MediaPlayPause"
      },
      "description": "Toggle play/pause",
      "global": true
    },
    "pause": {
      "suggested_key": {
        "default": "MediaPlayPause"
      },
      "description": "Pause currently playing media",
      "global": true
    },
    "previous": {
      "suggested_key": {
        "default": "MediaPlayPause"
      },
      "description": "Go to previous song",
      "global": true
    },
    "next": {
      "suggested_key": {
        "default": "MediaPlayPause"
      },
      "description": "Go to next song",
      "global": true
    },
    "favorite": {
      "suggested_key": {
        "default": "MediaPlayPause"
      },
      "description": "Favorite currently playing song",
      "global": true
    }
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "permissions": [
    "tabs"
  ]
}
